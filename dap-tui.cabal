cabal-version:      2.4
name:               dap-tui
version:            0.1.0.0
synopsis:

-- A longer description of the package.
-- description:
homepage:

-- A URL where users can report bugs.
-- bug-reports:
license:            NONE
author:             Mahdi Seyedan
maintainer:         mahdi.se@yahoo.com

-- A copyright notice.
-- copyright:
category:           Development
extra-source-files: CHANGELOG.md

library
    exposed-modules:  Cli
                      Utils
                      Dap
                      Dap.Session
                      Dap.Protocol
                      Dap.Request
                      Dap.Response
                      Dap.Event
                      Dap.MsgIn
                      Dap.MsgOut
                      Dap.Types
                      Dap.Env
    build-depends:    base
                    , network-simple
                    , network
                    , text
                    , bytestring
                    , containers
                    , aeson
                    , process
                    , attoparsec
                    , attoparsec-aeson
                    , case-insensitive
                    , transformers >= 0.6.0.6
                    , async
                    , unliftio
                    , vector
                    , stm
                    , scientific
                    , filepath
                    , pretty-simple
                    , safe-exceptions
                    , word8
                    , prettyprinter
                    , indexed-traversable
                    , websockets
    hs-source-dirs:   src
    default-language: GHC2021
    ghc-options: -Wall -Wno-unused-imports -Wno-missing-export-lists -Wno-name-shadowing
  default-extensions:  BangPatterns
                       ConstraintKinds
                       DataKinds
                       DeriveGeneric
                       DerivingStrategies
                       DerivingVia
                       FlexibleContexts
                       FlexibleInstances
                       GeneralizedNewtypeDeriving
                       InstanceSigs
                       KindSignatures
                       LambdaCase
                       MultiParamTypeClasses
                       OverloadedStrings
                       OverloadedLabels
                       OverloadedRecordDot
                       RecordWildCards
                       ScopedTypeVariables
                       TypeApplications
                       TypeFamilies
                       TypeOperators
                       GADTs
                       ViewPatterns
                       PatternSynonyms
                       BlockArguments
                       RankNTypes
                       StandaloneDeriving
                       NamedFieldPuns
                       DeriveAnyClass
                       DuplicateRecordFields
                        

executable dap-tui
    main-is:          Main.hs
    build-depends:
        base ^>=4.16.4.0,
        dap-tui

    ghc-options: -threaded
    hs-source-dirs:   app
    default-language: GHC2021

test-suite dap-tui-test
    default-language: GHC2021
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          MyLibTest.hs
    build-depends:    base ^>=4.16.4.0
